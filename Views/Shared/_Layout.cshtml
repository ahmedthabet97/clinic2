<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/dashbord.styles.css" asp-append-version="true" />-->
    @*Icone*@
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" asp-append-version="true" />
    <!--  Font Awesome Solid + Brands -->
    <link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/brands.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/solid.css" rel="stylesheet">


    @*Datatable*@
    <!--<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" asp-append-version="true" />-->
   

</head>
<body id="body-pd" style="background-image: url('~/img/background.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">


    <header class="header" id="header">
        <div class="header_toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>
        <div class="header_img">
            <img src="~/img/logo.jpg" alt="">
        </div>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Home">Hello, @User.Identity.Name!</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Account">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Register" asp-controller="Account"> Register</a>
                    </li>
                }
            </ul>
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
            <nav class="nav">

                <div>
                    <a asp-controller="Home" asp-action="Index" class="nav_logo">
                        <img class="nav_logo-icon" src="~/img/logo.jpg" alt="" style="width:25px; height:30px; ">
                        <span class="nav_logo-name">
                            Clinics Mangment
                        </span>
                    </a>

                    <div>
                        <a asp-controller="Home" asp-action="Index" class="nav_link active">
                            <i class='bx bx-grid-alt nav_icon'></i>
                            <span class="nav_name">Dashboard</span>

                        </a>


                        <a asp-controller="Clinics" asp-action="Index" class="nav_link">
                            <i class='bx bx-clinic nav_icon'></i> <span class="nav_name">Clinics</span>

                        </a>
                       
                        <a asp-controller="Doctor" asp-action="Index" class="nav_link">
                            <i class='bx bx-group nav_icon'></i> <span class="nav_name">Doctors</span>
                        </a>


                             </div>
                        </div>
            @if (!User.Identity.IsAuthenticated)
            
            {
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                    <i class="bi bi-box-arrow-in-right"></i><span class="nav_name">Login</span>
                        </a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">
                    <i class="bi bi-r-circle"></i>  <span class="nav_name">  Register</span>
                        </a>
            }


            else
            
            {
                <a asp-controller="Account" asp-action="Logout">
                    <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span>
                </a>
            }
            </nav>
        </div>




    <div class="  container  height-100  cont1 " id="">

        @RenderBody()
    </div>
    <!-- jQuery should be included first -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap JS (requires jQuery) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)













    <!--<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>-->
    @*<script src="/build/constrast-bootstrap-pro/js/cdb.js"></script>*@

    
    <script src="~/js/site.js"></script>

</body>
</html>

